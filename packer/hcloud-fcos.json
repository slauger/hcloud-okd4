{
  "variables": {
    "location": "nbg1",
    "server_type": "cx11",
    "snapshot_prefix": "fcos",
    "image_type": "generic",
    "ignition_config": "config.ign"
  },
  "builders": [
    {
      "type": "hcloud",
      "image": "ubuntu-18.04",
      "location": "{{user `location`}}",
      "server_type": "{{user `server_type`}}",
      "ssh_username": "root",
      "rescue": "linux64",
      "snapshot_name": "{{user `snapshot_prefix`}}-{{timestamp}}",
      "snapshot_labels": {
        "os": "fcos",
        "image_type": "{{user `image_type`}}",
        "fcos_stream": "{{user `fcos_stream`}}",
        "fcos_release": "{{user `fcos_release`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "set -x",
        "mkdir /source",
        "mount -t tmpfs -o size=2G none /source",
        "cd /source",
        "curl -sfL https://builds.coreos.fedoraproject.org/prod/streams/{{user `fcos_stream`}}/builds/{{user `fcos_release`}}/x86_64/fedora-coreos-{{user `fcos_release`}}-qemu.x86_64.qcow2.xz | unxz > fedora-coreos-{{user `fcos_release`}}-qemu.x86_64.qcow2",
        "qemu-img convert fedora-coreos-{{user `fcos_release`}}-qemu.x86_64.qcow2 -O raw /dev/sda",
        "partprobe /dev/sda",
        "mkdir /target",
        "mount /dev/sda1 /target",
        "mkdir /target/ignition"
      ]
    },
    {
      "type": "file",
      "source": "{{user `ignition_config`}}",
      "destination": "/target/ignition/config.ign"
    },
    {
      "type": "shell",
      "inline": [
        "set -x",
        "cd /",
        "umount /source",
        "umount /target"
      ]
    }
  ]
}
