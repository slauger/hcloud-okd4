{
  "extends": [
    "github>slauger/renovate-config"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "terraform"
      ],
      "groupName": "all terraform dependencies",
      "groupSlug": "terraform-all"
    }
  ]
}
